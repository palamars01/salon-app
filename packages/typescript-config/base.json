{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "incremental": false,
    "isolatedModules": true,
    "module": "ES2022",
    "target": "ES6",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "strict": true
  }
}
